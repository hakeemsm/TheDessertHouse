@model TheDessertHouse.Web.Models.UserInformationView
@Html.Partial(Url.Content("~/Views/Shared/Message.cshtml"))
<div id="userNameDiv">
    @Html.LabelFor(l => l.UserName)
    @Html.TextBoxFor(m => m.UserName, new { id = "user" })
    <input type="button" id="btnUser" value="Submit" />
</div>
<div id="answerDiv" style="display: none">
    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { id = "frmForgotPwd" }))
    { 
        @Html.HiddenFor(m => m.UserName, new { id = "userName" })
        @Html.LabelFor(m => m.SecretQuestion)
        <span id="spnQtn"></span>
        <br />
        @Html.LabelFor(l => l.HintAnswer)
        @Html.TextBoxFor(m => m.HintAnswer, new { id = "hintAnswer" })
        <input type="submit" id="btnAnswer" value="Reset password" />
    }
</div>
@section scriptContent{
    <script type="text/javascript">
        var getQuestion = '@Url.Action("GetHintAnswer", "Account")';
    </script>
    <script type="text/javascript" src="@Url.Content("~/Content/scripts/forgot-password.js")"></script>
}
