@model TheDessertHouse.Web.Models.NewsletterView

@Html.Partial(Url.Content("~/Views/Shared/Message.cshtml"))
@using (Html.BeginForm("CreateNewsletter", "Newsletter", FormMethod.Post, new { @class = "newsletter-create" }))
{
    <p class="field input">
        <label for="title">
            Subject</label><br />
        @Html.TextBoxFor(m => m.Subject, new { @maxlength = 256 })
    </p>
		
    <p class="field input">
        <label for="body">
            Body</label><br />
        @Html.TextBoxFor(m => m.HtmlBody, new { style = "height: 500px" })
    </p>
		
    
    <input type="submit" id="btnSubmit" value="Send Newsletter" />
        
}
